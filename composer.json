{
    "name": "sfcms/banner-bundle",
    "type": "symfony-bundle",
    "description": "Sfcms - Banner Bundle.",
    "config": {
        "slug": "banner",
        "title": "Bannières",
        "roleTitle": "Gestion des bannières publicitaires",
        "cmd": "app:copy:bundle",
        "module": {
            "name": "Bannières publicitaires",
            "description": "Module permettant de créer et afficher des bannières publicitaires et récupérer des statistiques du nombre de vues et de clicks.",
            "icon": "/medias/icons/fontawesome/light/images.svg"
        },
        "actions": [
            {
                "name": "Bannière publicitaire",
                "controller": "App\\Controller\\Front\\Action\\BannerController",
                "entity": "App\\Entity\\Module\\Banner\\Banner",
                "action": "view",
                "icon": "/medias/icons/fontawesome/light/image.svg",
                "card": false,
                "dropdown": true
            },
            {
                "name": "Bannières publicitaires",
                "controller": "App\\Controller\\Front\\Action\\BannerController",
                "entity": "App\\Entity\\Module\\Banner\\Teaser",
                "action": "teaser",
                "icon": "/medias/icons/fontawesome/light/images.svg",
                "card": false,
                "dropdown": true
            }
        ]
    },
    "keywords": [
        "sfcms",
        "banner",
        "bundle"
    ],
    "homepage": "https://github.com/Sebastien74",
    "license": "MIT",
    "authors": [
        {
            "name": "Sébastien FOURNIER",
            "email": "fournier.sebastien@outlook.com",
            "homepage": "https://github.com/Sebastien74"
        }
    ],
    "require": {
        "php": ">=8.2.11",
        "symfony/framework-bundle": "^6.4|^7.0"
    },
    "scripts": {
        "auto-scripts": {
            "app:copy:bundle": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}